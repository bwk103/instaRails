<% provide(:title, @user.name) %>
<div class="row">
  <div id="profile-photo"class="col-md-4 center">
    <img src="https://randomuser.me/api/portraits/men/52.jpg" alt="">
  </div>
  <div id="user-details" class="col-md-6">
    <h3>
      <%=@user.username %>
    </h3>
      <span>
        <%= link_to '#', class:'btn btn-outline-dark' do %>
          Edit Profile <i class="fas fa-cog"></i>
        <% end %>
      </span>
    </h4>
    <div id="user-stats">
      <p><strong>1</strong> post&emsp;<strong>42</strong> followers&emsp;<strong>34</strong> following  </p>
      <p><strong id="user-name"><%= @user.name %></strong></p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 user-posts">
    <% @user.posts.each do |post| %>
      <%= image_tag post.picture, class: 'image-preview' %>
      <% end %>
  </div>
</div>
