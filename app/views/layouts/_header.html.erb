<header class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <i class="fas fa-camera-retro"></i>
      <%= link_to 'instaRails', root_path, class: 'navbar-brand mr-auto' %>
        <div class="navbar-nav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to posts_path, class: 'nav-link' do %>
              <i class="far fa-compass"></i>
              <% end %>
            </li>
            <% if logged_in? %>
                <%= render 'layouts/logged_in_header_items' %>
            <% else %>
                <%= render 'layouts/logged_out_header_items' %>
            <% end %>
          </ul>
        </div>
    </div>
</header>
